{
  "name": "myblog",
  "private": true,
  "version": "1.0.0",
  "description": "MyBlog - 一个包含 Go 后端和 SvelteKit 前端的 Monorepo 项目",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "web"
  ],
  "scripts": {
    "setup": "bun scripts/setup.ts",
    "dev": "concurrently --names \"SERVER,WEB\" --prefix-colors \"blue,green\" \"bun run dev:server\" \"bun run dev:web\"",
    "dev:server": "cd server && go run scripts/watcher.go",
    "dev:web": "cd web && bun run dev",
    "build": "bun run build:server && bun run build:web",
    "build:server": "bun scripts/go-tools.ts build",
    "build:web": "cd web && bun run build",
    "test": "bun run test:server && bun run test:web",
    "test:server": "bun scripts/go-tools.ts test",
    "test:web": "cd web && bun run test",
    "lint": "bun run lint:web && bun run lint:server && bun run lint:go",
    "lint:web": "cd web && bun run lint",
    "lint:server": "bun scripts/go-tools.ts vet",
    "lint:go": "bun scripts/go-tools.ts lint",
    "format": "bun run format:web && bun run format:server",
    "format:web": "cd web && bun run format",
    "format:server": "bun scripts/go-tools.ts format",
    "format:go": "cd server && bun run scripts/format-code.js",
    "clean": "bun run clean:server && bun run clean:web",
    "clean:server": "bun scripts/go-tools.ts clean",
    "clean:web": "cd web && rm -rf .svelte-kit dist",
    "deps": "bun install && cd web && bun install && cd ../server && go mod tidy",
    "check": "bun run lint && bun run test",
    "quality": "bun run format && bun run lint && bun run test",
    "go:lint-install": "bun scripts/go-tools.ts lint-install",
    "go:quality": "bun scripts/go-tools.ts quality"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.18.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.20.0"
  },
  "keywords": [
    "monorepo",
    "go",
    "svelte",
    "blog",
    "fullstack"
  ],
  "author": "MyBlog Team",
  "license": "MIT"
}
